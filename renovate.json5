{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    ':pinDependencies',
    'config:best-practices',
    'group:allNonMajor',
    'customManagers:githubActionsVersions',
  ],
  branchPrefix: 'chore/renovate-',
  rebaseWhen: 'behind-base-branch',
  ignorePaths: [
    '**/provider_override.tf',
  ],
  nix: {
    enabled: true,
  },
  lockFileMaintenance: {
    enabled: true,
    recreateWhen: 'always',
    rebaseWhen: 'behind-base-branch',
  },
  packageRules: [
    {
      matchManagers: 'github-actions',
    },
    {
      matchPackageNames: [
        'ghcr.io/music-assistant/server',
      ],
      versioning: 'pep440',
    },
    {
      matchManagers: [
        'nix',
      ],
    },
  ],
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/(^|/)*\\.tf$/',
      ],
      datasourceTemplate: 'docker',
      matchStrings: [
        '\\s+repository\\s+=\\s+"(?<depName>.*?)"\\s+tag\\s+=\\s+"(?<currentValue>[\\w+\\.\\-]*)"',
      ],
    },
  ],
}
