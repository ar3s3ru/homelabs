{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor"
  ],
  "branchPrefix": "chore/renovate-",
  "rebaseWhen": "behind-base-branch",
  "ignorePaths": [
    "**/provider_override.tf" // These files are automatically generated by Terragrunt.
  ],
  "packageRules": [
    // Group all Github Actions updates in a single PR.
    {
      "matchManagers": "github-actions"
    }
  ],
  "customManagers": [
    // Updates Docker images in Terraform files.
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)*\\.tf$"
      ],
      "datasourceTemplate": "docker",
      "matchStrings": [
        "\\s+repository\\s+=\\s+\"(?<depName>.*?)\"\\s+tag\\s+=\\s+\"(?<currentValue>[\\w+\\.\\-]*)\""
      ]
    }
  ]
}
