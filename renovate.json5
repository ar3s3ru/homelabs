{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor"
  ],
  "branchPrefix": "chore/renovate-",
  "rebaseWhen": "behind-base-branch",
  "ignorePaths": [
    "**/provider_override.tf" // These files are automatically generated by Terragrunt.
  ],
  "nix": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "recreateWhen": "always",
    "rebaseStalePrs": true
  },
  "packageRules": [
    // Group all Github Actions updates in a single PR.
    {
      "matchManagers": "github-actions"
    },
    {
      "matchPackageNames": [
        "ghcr.io/music-assistant/server"
      ],
      "versioning": "pep440"
    },
    {
      "matchManagers": [
        "nix"
      ]
    }
  ],
  "customManagers": [
    // Updates Docker images in Terraform files.
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)*\\.tf$"
      ],
      "datasourceTemplate": "docker",
      "matchStrings": [
        "\\s+repository\\s+=\\s+\"(?<depName>.*?)\"\\s+tag\\s+=\\s+\"(?<currentValue>[\\w+\\.\\-]*)\""
      ]
    }
  ]
}
